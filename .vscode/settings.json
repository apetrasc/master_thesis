{
    "latex-workshop.latex.tools": [
        {
            "name": "uplatex",
            "command": "uplatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-kanji=utf8",
                "%DOC%"
            ]
        },
        {
            "name": "pbibtex",
            "command": "bash",
            "args": [
                "-c",
                "cd \"${LATEX_DIR}\" && pbibtex -kanji=utf8 \"${LATEX_DOC}\""
            ],
            "env": {
                "LATEX_DIR": "%DIR%",
                "LATEX_DOC": "%DOC%"
            }
        },
        {
            "name": "dvipdfmx-temp",
            "command": "dvipdfmx",
            "args": [
                "-f",
                "ptex-ipaex.map",
                "-z",
                "0",
                "%DOC%.dvi"
            ]
        },
        {
            "name": "optimize-pdf",
            "command": "bash",
            "args": [
                "-c",
                "gs -dNOPAUSE -dBATCH -sDEVICE=pdfwrite -dEmbedAllFonts=true -dSubsetFonts=true -dCompatibilityLevel=1.5 -sOutputFile='%DOC%.pdf' '%DOC%_temp.pdf' && rm -f '%DOC%_temp.pdf'"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "uplatex + pbibtex + dvipdfmx + optimize",
            "tools": [
                "uplatex",
                "pbibtex",
                "uplatex",
                "uplatex",
                "dvipdfmx-temp",
                "optimize-pdf"
            ]
        }
    ],
    "latex-workshop.latex.recipe.default": "uplatex + pbibtex + dvipdfmx",
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.outDir": "%DIR%",
    "latex-workshop.latex.root": "main.tex",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "latex-workshop.view.pdf.internal.synctex.mode": 1,
    "latex-workshop.latex.option.shellEscape": "never",
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.synctex.gz",
        "*.dvi",
        "*_temp.pdf"
    ],
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 80,
    "editor.rulers": [80],
    "editor.guides.bracketPairs": true,
    "editor.guides.indentation": true,
    "latex-workshop.message.log.show": true,
    "latex-workshop.message.badge.show": true,
    "latex-workshop.message.error.show": true,
    "latex-workshop.message.warning.show": true,
    "latex-workshop.latex.build.clearCache.enabled": false
}
